{
	"name": "electronexample",
	"version": "1.0.0",
	"description": "",
	"main": "app.js",
	"scripts": {
		"app": "electron .",
		"install-all": "npm install && npm install --only=dev",
		"package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
		"package-win": "electron-packager . --overwrite --asar=false --platform=win32 --arch=x64 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electon Example\"",
		"package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/linux/icon.png --prune=true --out=release-builds",
		"rebuild": "electron-rebuild -f -w <PACKAGE>",
		"r-win": "electron-builder -c --win"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/steffenreimann/ElectronExample.git"
	},
	"author": "Steffen Reimann",
	"license": "ISC",
	"dependencies": {
		"animate.css": "^4.1.1",
		"child-process-async": "^1.0.1",
		"easy-nodejs-app-settings": "^0.0.21",

		"exif-parser": "^0.1.12",
		"ffmpeg-ffprobe-static": "^4.3.1-rc.6",
		"ffmpeg-static": "^4.4.0",
		"fluent-ffmpeg": "^2.1.2",
		"nouislider": "^15.2.0",
		"string-math": "^1.2.2",
		"wavesurfer.js": "^5.1.0"
	},
	"devDependencies": {
		"electron": "^13.0.0",
		"electron-packager": "^15.2.0",
		"electron-rebuild": "^2.3.5",
		"electron-builder": "^22.11.7"
	},
	"bugs": {
		"url": "https://github.com/steffenreimann/ElectronExample/issues"
	},
	"homepage": "https://github.com/steffenreimann/ElectronExample#readme",
	"build": {
		"appId": "video.player",
		"win": {
			"target": "portable"
		}
	}
}
